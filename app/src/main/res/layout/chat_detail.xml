<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chat_detail_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_room"/>

    <TextView
        android:id="@+id/chat_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:layout_toRightOf="@+id/chat_detail_image"
        android:fontFamily="@font/wemakebold"
        android:text="한이음 회의"
        android:textSize="15dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/chat_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/chat_detail_name"
        android:layout_toRightOf="@id/chat_detail_image"
        android:text="님 점심 뭐 먹으실 ?"
        android:textColor="@color/white"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/chat_detail_time"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="오후 1:07"
        android:textSize="10dp"
        android:textColor="@color/white"/>


</RelativeLayout>