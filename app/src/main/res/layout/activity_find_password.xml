<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.auth.FindPasswordActivity"
    android:background="@color/everygreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp"
                android:text="@string/find_password"
                android:textColor="@color/purple_light"
                android:textSize="40dp"
                android:fontFamily="@font/wemakebold"/>


            <EditText
                android:id="@+id/findPasswordEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_border_white"
                android:cursorVisible="true"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="15dp"
                android:elevation="3dp"
                android:fontFamily="@font/wemakeregular"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                android:textColorHint="@color/purple"
                android:textColor="@color/purple_light"
                android:textSize="15sp"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/find_password_inform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/wemakeregular"
                android:text="@string/find_password_inform"
                android:textColor="@color/purple"

                />

            <Button
                android:id="@+id/send_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_background_purple"
                android:fontFamily="@font/wemakebold"
                android:text="@string/send_email"
                android:textColor="@color/purple_light"
                android:textAllCaps="false"
                android:textSize="25dp">
            </Button>

        </LinearLayout>
    </ScrollView>


</LinearLayout>