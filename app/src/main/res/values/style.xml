<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/calencer_selected</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/calencer_selected</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:textColorPrimary">@color/white</item>
<!--        <item name="colorControlNormal">@color/white</item>-->
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:datePickerMode">calendar</item>
    </style>

    <style name="MySpinnerStyle" parent="@android:style/Widget.Material.Light.Spinner">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>